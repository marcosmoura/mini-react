{
  "name": "mini-react",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "rollup -c ./rollup.config.js -w --environment=target:development",
    "build": "rollup -c ./rollup.config.js --environment=target:production",
    "test": "jest --config jest.config.js",
    "test:watch": "yarn test --verbose --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --watch --config jest.config.js",
    "test:updateSnapshot": "yarn test --updateSnapshot",
    "test:coverage": "yarn test --coverage",
    "test:coverage:open": "yarn test:coverage && open coverage/lcov-report/index.html",
    "lint": "tslint '{src,__tests__}/**/*.ts'",
    "lint:fix": "yarn lint --fix"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^23.3.7",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "rollup": "^0.66.6",
    "rollup-plugin-typescript": "^1.0.0",
    "ts-jest": "^23.10.4",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "typescript": "^3.1.3",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "{src,__tests__}/**/*.ts": [
      "tslint",
      "git add"
    ]
  }
}
