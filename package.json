{
  "name": "mini-react",
  "version": "0.0.1",
  "private": true,
  "main": "dist/mini-react.cjs.js",
  "module": "dist/mini-react.esm.js",
  "browser": "dist/mini-react.umd.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail -r 'yarn build-app-local' 'yarn build-lib-local'",
    "build-app-local": "webpack-dev-server -w",
    "build-lib-local": "rollup -c ./rollup.config.js -w --environment=target:development",
    "build-lib": "rollup -c ./rollup.config.js --environment=target:production",
    "test": "jest --config jest.config.js",
    "test:watch": "yarn test --verbose --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --watch --config jest.config.js",
    "test:updateSnapshot": "yarn test --updateSnapshot",
    "test:coverage": "yarn test --coverage",
    "test:coverage:open": "yarn test:coverage && open coverage/lcov-report/index.html",
    "lint": "tslint '{src,__tests__}/**/*.ts'",
    "lint:fix": "yarn lint --fix"
  },
  "dependencies": {
    "emotion": "^9.2.12"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@types/jest": "^23.3.7",
    "babel-loader": "^8.0.4",
    "babel-plugin-emotion": "^9.2.11",
    "concurrently": "^4.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "rollup": "^0.66.6",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-typescript": "^1.0.0",
    "rollup-plugin-uglify": "^6.0.0",
    "ts-jest": "^23.10.4",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "typescript": "^3.1.3",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  }
}
