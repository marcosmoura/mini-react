{
  "name": "mini-react",
  "version": "0.0.1",
  "private": true,
  "main": "dist/mini-react.cjs.js",
  "module": "dist/mini-react.esm.js",
  "browser": "dist/mini-react.umd.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail -r 'yarn build:app:local' 'yarn build:lib:local'",
    "build:app:local": "webpack-dev-server -w",
    "build:lib:local": "rollup -c ./rollup.config.js -w --environment=target:development",
    "build:lib": "rollup -c ./rollup.config.js --environment=target:production",
    "test:unit": "jest --config jest.config.js",
    "test:unit:watch": "yarn test:unit --verbose --watch",
    "test:unit:coverage": "yarn test:unit --coverage",
    "test:unit:coverage:open": "yarn test:unit:coverage && open coverage/lcov-report/index.html",
    "test:e2e:firefox-headless": "yarn testcafe 'firefox:headless' __tests__/e2e/app.js",
    "test:e2e:chrome-headless": "yarn testcafe 'chrome:headless' __tests__/e2e/app.js",
    "test:e2e:chrome-canary-headless": "yarn testcafe 'chrome-canary:headless' __tests__/e2e/app.js",
    "test:e2e:safari": "yarn testcafe 'safari' __tests__/e2e/app.js",
    "test:e2e:firefox": "yarn testcafe 'firefox' __tests__/e2e/app.js",
    "test:e2e:chrome": "yarn testcafe 'chrome' __tests__/e2e/app.js",
    "test:e2e:chrome-canary": "yarn testcafe 'chrome-canary' __tests__/e2e/app.js",
    "test:e2e:all": "yarn test:e2e:firefox; yarn test:e2e:chrome-canary; yarn test:e2e:safari",
    "test:e2e:all-headless": "yarn test:e2e:firefox-headless; yarn test:e2e:chrome-canary-headless",
    "test": "yarn test:unit; yarn test:e2e:all",
    "clear": "rm -rf dist/ node_modules/ coverage/ yarn.lock; yarn"
  },
  "dependencies": {
    "emotion": "^9.2.12"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@types/jest": "^23.3.7",
    "babel-loader": "^8.0.4",
    "babel-plugin-emotion": "^9.2.11",
    "concurrently": "^4.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.66.6",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-typescript": "^1.0.0",
    "rollup-plugin-uglify": "^6.0.0",
    "testcafe": "^0.23.0",
    "ts-jest": "^23.10.4",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "typescript": "^3.1.3",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  }
}
