{
  "extends": [
    "tslint:latest",
    "tslint-config-airbnb"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "import-name": [
      false
    ],
    "max-line-length": [
      true,
      120
    ],
    "object-literal-sort-keys": [
      false
    ],
    "ordered-imports": [
      false
    ],
    "semicolon": [
      true,
      "never"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case"
    ]
  }
}
